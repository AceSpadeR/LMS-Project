@page
@model LMS.Pages.Classes.Assignments.DeleteModel

@{
    ViewData["Title"] = "Delete Assignment";
}

<h1>Delete Assignment</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.MaxPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.MaxPoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.SubmissionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.SubmissionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.ClassId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.ClassId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Assignment.Id" />
        <a asp-page="/Classes/Details" asp-route-id="@Model.Assignment.ClassId" class="btn btn-primary ms-0 me-1">
            <i class="bi bi-arrow-left me-2"></i> Back to Class
        </a>
        <button type="submit" class="btn btn-danger me-0 ms-1">
            <i class="bi bi-trash-fill me-2"></i> Delete
        </button>
    </form>
</div>
