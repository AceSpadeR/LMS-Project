@page
@model LMS.Pages.Classes.CreateModel

@{
    ViewData["Title"] = "Create Class";
}

<h1 class="row justify-content-center">Create New Class</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Classes.DepartmentName" class="control-label"></label>
                <select asp-for="Classes.DepartmentName" class="form-control" asp-items="@Model.DepartmentList">
                    <option value="">Select a Department</option>
                </select>
                <i><span asp-validation-for="Classes.DepartmentName" class="text-danger small"></span></i>
            </div>
            <div class="row mt-2">
                <div class="col-7">
                    <div class="form-group">
                        <label asp-for="Classes.CourseNumber" class="control-label"></label>
                        <input asp-for="Classes.CourseNumber" class="form-control" />
                        <i><span asp-validation-for="Classes.CourseNumber" class="text-danger small"></span></i>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="Classes.CreditHours" class="control-label"></label>
                        <input asp-for="Classes.CreditHours" class="form-control" />
                        <i><span asp-validation-for="Classes.CreditHours" class="text-danger small"></span></i>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Classes.Title" class="control-label"></label>
                <input asp-for="Classes.Title" class="form-control" />
                <i><span asp-validation-for="Classes.Title" class="text-danger small"></span></i>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Classes.Location" class="control-label"></label>
                <input asp-for="Classes.Location" class="form-control" />
                <i><span asp-validation-for="Classes.Location" class="text-danger small"></span></i>
            </div>
            <div class="row mt-2">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Classes.StartTime" class="control-label"></label>
                        <input asp-for="Classes.StartTime" class="form-control" />
                        <i><span asp-validation-for="Classes.StartTime" class="text-danger small"></span></i>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Classes.EndTime" class="control-label"></label>
                        <input asp-for="Classes.EndTime" class="form-control" />
                        <i><span asp-validation-for="Classes.EndTime" class="text-danger small"></span></i>
                    </div>
                </div>
            </div>
            <label class="control-label mt-2">Meeting Days</label>
            <div class="form-group d-flex flex-wrap justify-content-center">
                <div class="form-check mx-2">
                    <input type="checkbox" name="Classes.MeetingDays" value="Monday" class="form-check-input" />
                    <label class="form-check-label">Monday</label>
                </div>
                <div class="form-check mx-2">
                    <input type="checkbox" name="Classes.MeetingDays" value="Tuesday" class="form-check-input" />
                    <label class="form-check-label">Tuesday</label>
                </div>
                <div class="form-check mx-2">
                    <input type="checkbox" name="Classes.MeetingDays" value="Wednesday" class="form-check-input" />
                    <label class="form-check-label">Wednesday</label>
                </div>
                <div class="form-check mx-2">
                    <input type="checkbox" name="Classes.MeetingDays" value="Thursday" class="form-check-input" />
                    <label class="form-check-label">Thursday</label>
                </div>
                <div class="form-check mx-2">
                    <input type="checkbox" name="Classes.MeetingDays" value="Friday" class="form-check-input" />
                    <label class="form-check-label">Friday</label>
                </div>
                <i><span asp-validation-for="Classes.MeetingDays" class="text-danger small"></span></i>
            </div>
            <div class="form-group mt-3 row">
                <div class="col-md-7">
                    <a asp-page="Index" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-lg me-2"></i> Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
