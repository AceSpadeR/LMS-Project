<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stellar LMS - @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/lux/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand py-0" asp-area="" asp-page="/Index"><i class="bi bi-rocket-takeoff me-2" style="font-size: 2rem; vertical-align: middle;"></i> Stellar LMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-area="" asp-page="/Index">
                                    <i class="bi bi-grid-1x2 me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Calendar") ? "active" : "")" asp-area="" asp-page="/Calendar">
                                    <i class="bi bi-calendar2-event me-2"></i> Calendar
                                </a>
                            </li>
                            @if (User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Classes") ? "active" : "")" asp-area="" asp-page="/Classes/Index">
                                        <i class="bi bi-journal-bookmark-fill me-2"></i> Classes
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Classes") ? "active" : "")" asp-area="" asp-page="/Classes/Registration/Index">
                                        <i class="bi bi-journal-bookmark-fill me-2"></i> Classes
                                    </a>
                                  
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Account/Fees") ? "active" : "")" asp-area="" asp-page="/Account/Fees" id="Fees">
                                        <i class="bi bi-cash-stack me-2"></i> Fees
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Outside of Nav (on the right) -->
                    <div class="outside-nav mx-2">
                        <partial name="_NotificationsPartial" />
                    </div>
                    <div class="outside-nav mx-2 @(Context.Request.Path.StartsWithSegments("/Account/Profile") ? "outside-nav-active" : "")">
                        <a class="nav-link" asp-area="" asp-page="/Account/Profile">
                            <i class="bi bi-person" style="font-size: 1.5rem; vertical-align: middle;"></i>
                        </a>
                    </div>
                    <div class="mx-2">
                        <partial name="_LoginStatusPartial" />
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            
            <!-- Notifications OffCanvas Component -->
           <div class="offcanvas offcanvas-end" tabindex="-1" id="notifications" aria-labelledby="notifications">
                <div class="offcanvas-header py-4">
                    <h2 class="offcanvas-title">Notifications <i class="bi bi-bell ms-2"></i></h2>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body" id="notification-list">
                    <div>
                        <!-- Generated Dynamically with JS in the _NotificationsPartial Page-->
                    </div>
                </div>
            </div>

        </main>
    </div>

    <footer class="border-top footer text-white bg-primary fixed-bottom">
        <div class="container">
            &copy; 2024 - Stellar LMS - <a class="text-white" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src='lib/fullcalendar/dist/index.global.js'></script>
    <script src="https://cdn.tiny.cloud/1/dvu3hkil94ns5cedz11ombkod9bk89l4eu550r3ld1krcq2u/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>